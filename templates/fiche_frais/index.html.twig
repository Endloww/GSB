{% extends 'base.html.twig' %}

{% block title %}FicheFrais index{% endblock %}

{% block body %}
    <center>
    <h1>FicheFrais index</h1>
    </center>

    <div class="ps-5">
        <a href="{{ path('app_fiche_frais_new') }}">
            <button class="btn btn-success rounded-2" type="button"><b>+ Cr√©er</b></button>
        </a>
    </div>



    <br/>

<div class="ps-5 pe-5">
    <table class="table">
        <thead class="table table-striped table-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Mois</th>
                <th scope="col">NbJustificatifs</th>
                <th scope="col">MontantValid</th>
                <th scope="col">DateModif</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for fiche_frai in fiche_frais %}
            <tr>
                <td>{{ fiche_frai.id }}</td>
                <td>{{ fiche_frai.mois }}</td>
                <td>{{ fiche_frai.nbJustificatifs }}</td>
                <td>{{ fiche_frai.montantValid }}</td>
                <td>{{ fiche_frai.dateModif ? fiche_frai.dateModif|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_fiche_frais_show', {'id': fiche_frai.id}) }}">show</a>
                    <a href="{{ path('app_fiche_frais_edit', {'id': fiche_frai.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}
